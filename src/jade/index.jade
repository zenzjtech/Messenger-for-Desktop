        ul.row2
          li
            a(target='_blank' href='http://www.softpedia.com/get/PORTABLE-SOFTWARE/Internet/Chat/Messenger-for-Desktop.shtml' title='Softpedia')
              img(src='img/softpedia.png' height='33' alt='Softpedia')
