  body

    section#header
      .container
        a.svg.logo(href='/')
          include ../svg/logo.svg

        h1.title Messenger for Desktop
        p.subtitle A simple &amp; beautiful app for Facebook Messenger.#[br]Chat without distractions on any OS.

        a.button.filled(href='#download' data-scroll) Download Now
        span.notice No affiliation with Facebook.

    section.blue#platforms
      .container
        h2.title OS X, Windows &amp; Linux

      img.wide(src='img/platforms.jpg' alt='Platforms Preview')

    section#messenger-features
      .container
        h2.title All the features you're used to

        ul.container
          li
            .tile
              p.description Thousands of stickers
          li
            .tile
              p.description Calls anywhere in the world
          li
            .tile
              p.description Send Photos and Videos

        ul.container
          li
            .tile
              p.description Read status
          li
            .tile
              p.description Voice messages
          li
            .tile
              p.description Group chats

    section.blue#features
      .container
        h2.title Integrated with your OS
        ul.clearfix
          li
            span.feature.feature-1
            .subtitle Launch on#[br]OS startup
          li
            span.feature.feature-2
            .subtitle Native#[br]Notifications
          li
            span.feature.feature-3
            .subtitle Custom#[br]Themes

    section#download
      .container.titlecontainer
        h2.title Download

      .container
        p.notice By downloading Messenger for Desktop, you acknowledge that it is not an official app #[br] and that it is not affiliated with or endorsed by Facebook.

      ul.container
        li: a.button.bordered#fhosx(href='https://updates-mac.messengerfordesktop.com/download/mirror/installcore/latest?platform=darwin' onclick="ga('send', 'event', {eventCategory: 'Download', eventAction: 'Mac', eventLabel: this.getAttribute('galabel')})" galabel='installCore')
          span.osx
            include ../svg/apple.svg
            span OS X

        li: a.button.bordered#fhwin(href='https://updates.messengerfordesktop.com/download/mirror/installcore/latest?platform=win32' onclick="ga('send', 'event', {eventCategory: 'Download', eventAction: 'Windows', eventLabel: this.getAttribute('galabel')})" galabel='installCore')
          span
            include ../svg/windows.svg
            span Windows

      .container
        h3.subtitle Linux:

      ul.container
        li: a.button.bordered(href='https://github.com/Aluxian/Facebook-Messenger-Desktop/releases/download/v1.4.3/Messenger_linux32.deb' onclick="ga('send', 'event', {eventCategory: 'Download', eventAction: 'Linux32DEB', eventLabel: 'GitHub'})")
          span
            include ../svg/debian.svg
            span DEB 32-bit

        li: a.button.bordered(href='https://github.com/Aluxian/Facebook-Messenger-Desktop/releases/download/v1.4.3/Messenger_linux64.deb' onclick="ga('send', 'event', {eventCategory: 'Download', eventAction: 'Linux64DEB', eventLabel: 'GitHub'})")
          span
            include ../svg/debian.svg
            span DEB 64-bit

      ul.container
        li: a.button.bordered(href='https://github.com/Aluxian/Facebook-Messenger-Desktop/releases/download/v1.4.8/Messenger_linux32.rpm' onclick="ga('send', 'event', {eventCategory: 'Download', eventAction: 'Linux32RPM', eventLabel: 'GitHub'})")
          span
            include ../svg/rpm.svg
            span RPM 32-bit

        li: a.button.bordered(href='https://github.com/Aluxian/Facebook-Messenger-Desktop/releases/download/v1.4.8/Messenger_linux64.rpm' onclick="ga('send', 'event', {eventCategory: 'Download', eventAction: 'Linux64RPM', eventLabel: 'GitHub'})")
          span
            include ../svg/rpm.svg
            span RPM 64-bit

